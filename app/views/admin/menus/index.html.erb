<%
   # Defining breadcrumbs
   @breadcrumbs = [
           {:link => admin_menus_path, :title => t('backend_part.menus')},
           {:title => t('backend_part.manage')}
   ]

   # Defining menu
   @menu = [
           {:link => admin_menus_path, :title => t('backend_part.manage_menus'), :icon => 'list'},
           {:link => new_admin_menu_path, :title => t('backend_part.create_menu'), :icon => 'file'},
   ]
%>

<div class="page-header">
  <h1><%= t('backend_part.menu') %>
    <small> <%= t('backend_part.manage') %></small>
  </h1>
</div>

<% columns = [{:name => 'name', :searchable => true, :title => t('activerecord.attributes.menu.name')},
              {:name => 'title', :searchable => true, :title => t('activerecord.attributes.menu.title')},
              {:name => 'description', :searchable => true, :title => t('activerecord.attributes.menu.description')},
              {:name => 'actions_grid_column', :title => t('backend_part.actions'), :edit => method(:edit_admin_menu_path), :remove => method(:admin_menu_path), :sortable => false},
] %>

<%= gridview_helper columns, {:class => "table table-striped table-bordered table-condensed",
                              :source => admin_menus_url,
                              :fnDrawCallback => "function(){$('a#tooltip').tooltip()}"} %>