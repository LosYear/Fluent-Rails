<%
   # Defining breadcrumbs
   @breadcrumbs = [
           {:link => admin_news_index_path, :title => t('backend_part.news')},
           {:title => t('backend_part.manage')}
   ]

   # Defining menu
   @menu = [
           {:link => admin_news_index_path, :title => t('backend_part.manage_news'), :icon => 'list'},
           {:link => new_admin_news_path, :title => t('backend_part.create_news'), :icon => 'file'},
   ]
%>

<div class="page-header">
  <h1><%= t('backend_part.news') %>
    <small> <%= t('backend_part.manage') %></small>
  </h1>
</div>

<%
   columns = [
           {:name => 'title', :searchable => true, :title => t('activerecord.attributes.news.title')},
           {:name => 'slug', :searchable => true, :title => t('activerecord.attributes.news.slug')},
           {:name => 'actions_grid_column', :title => t('backend_part.actions'), :edit => method(:edit_admin_news_path), :remove => method(:admin_news_path)},
   ]
%>

<%= gridview_helper columns, {:class => "table table-striped table-bordered table-condensed",
                              :source => admin_news_index_url,
                              :fnDrawCallback => "function(){$('a#tooltip').tooltip()}"} %>