<%
   # Defining breadcrumbs
   @breadcrumbs = [
           {:link => admin_users_path, :title => t('backend_part.users')},
           {:title => t('backend_part.manage')}
   ]

   # Defining menu
   @menu = [
           {:link => admin_users_path, :title => t('backend_part.manage_users'), :icon => 'list'},
           {:link => new_admin_user_path, :title => t('backend_part.create_user'), :icon => 'file'},
   ]
%>
<div class="page-header">
  <h1><%= t('backend_part.users') %>
    <small> <%= t('backend_part.manage') %></small>
  </h1>
</div>

<% columns = [
        {:name => 'id', :searchable => true, :title => "#"},
        {:name => 'email', :searchable => true, :link => method(:admin_user_path), :title => t('activerecord.attributes.user.email')},
        {:name => 'created_at', :searchable => true, :title => t('activerecord.attributes.user.created_at')},
        {:name => 'actions_grid_column', :title => t('backend_part.actions'), :edit => method(:edit_admin_user_path), :remove => method(:admin_user_path), :sortable => false},
] %>
<%= gridview_helper columns, {:class => "table table-striped table-bordered table-condensed",
                              :source => admin_users_url,
                              :fnDrawCallback => "function(){$('a#tooltip').tooltip()}"} %>
