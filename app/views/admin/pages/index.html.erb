<%
   # Defining breadcrumbs
   @breadcrumbs = [
           {:link => admin_pages_path, :title => t('backend_part.pages')},
           {:title => t('backend_part.manage')}
   ]

   # Defining menu
   @menu = [
           {:link => admin_pages_path, :title => t('backend_part.manage_pages'), :icon => 'list'},
           {:link => new_admin_page_path, :title => t('backend_part.create_page'), :icon => 'file'},
   ]
%>

<div class="page-header">
  <h1><%= t('backend_part.pages') %>
    <small> <%= t('backend_part.manage') %></small>
  </h1>
</div>

<%
   columns = [
           {:name => 'title', :searchable => true, :title => t('activerecord.attributes.page.title')},
           {:name => 'slug', :searchable => true, :title => t('activerecord.attributes.page.slug')},
           {:name => 'actions_grid_column', :title => t('backend_part.actions'), :edit => method(:edit_admin_page_path), :remove => method(:admin_page_path)},
   ]
%>

<%= gridview_helper columns, {:class => "table table-striped table-bordered table-condensed",
                              :source => admin_pages_url,
                              :fnDrawCallback => "function(){$('a#tooltip').tooltip()}"} %>