<%= semantic_form_for [:admin, @menu_item], :html => {:class => "form-horizontal"} do |f| %>
    <%= f.semantic_errors %>
    <%= f.inputs do %>
        <%= f.input :menu, :include_blank => false, :input_html => { :readonly => true } %>
        <%= f.input :parent_id, :as => :select, :collection => @menu_item.menu.admin_collection, :include_blank => false %>
        <%= f.input :title %>
        <%= f.input :url %>
        <%= f.input :status %>
    <% end %>
    <%= f.actions :class => 'form-group' do %>
        <div class="col-lg-offset-2 col-lg-8">
          <%= f.action :submit %>
          <%= f.action :cancel %>
        </div>
    <% end %>
<% end %>