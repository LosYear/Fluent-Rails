<%
   # Defining breadcrumbs
   @breadcrumbs = [
           {:link => admin_blocks_path, :title => t('backend_part.blocks')},
           {:title => t('backend_part.manage')}
   ]

   # Defining menu
   @menu = [
           {:link => admin_blocks_path, :title => t('backend_part.manage_blocks'), :icon => 'list'},
           {:link => new_admin_block_path, :title => t('backend_part.create_block'), :icon => 'file'},
   ]
%>

<div class="page-header">
  <h1><%= t('backend_part.blocks') %>
    <small> <%= t('backend_part.manage') %></small>
  </h1>
</div>

<% columns = [
        {:name => 'title', :searchable => true, :title => t('activerecord.attributes.block.title')},
        {:name => 'name', :searchable => true, :title => t('activerecord.attributes.block.name')},
        {:name => 'actions_grid_column', :title => t('backend_part.actions'), :edit => method(:edit_admin_block_path), :remove => method(:admin_block_path), :sortable => false},
] %>

<%= gridview_helper columns, {:class => "table table-striped table-bordered table-condensed",
                              :source => admin_blocks_url,
                              :fnDrawCallback => "function(){$('a#tooltip').tooltip()}"} %>