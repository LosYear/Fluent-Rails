<div class="blog-post twitter-post">
  <div class="wrapper">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <div class="post-header">
        <div class="time"><%= l entity.created_at, format: :long %></div>
        <div class="post-badge"></div>
      </div>
      <div class="post-body">
        <%= entity.content %>
      </div>
    </div>
    <div style="clear:both"></div>
  </div>
</div>