<div class="blog-posts">
  <div class="blog-post text-post">
    <div class="wrapper">
      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="post-header">
          <div class="time"><%= l @post.created_at, format: :long %></div>
          <div class="post-badge"></div>
        </div>
        <div class="post-body">
          <%= @post.content.to_s.html_safe  %></div>
      </div>
      <div style="clear:both"></div>
    </div>
  </div>
</div>