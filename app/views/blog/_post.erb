<div class="blog-post text-post">
  <div class="wrapper">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <div class="post-header">
        <h2><%= link_to entity.title, post_path(entity), data: {push: true} %></h2>
        <div class="time"><%= l entity.created_at, format: :long %></div>
        <div class="post-badge"></div>
      </div>
      <div class="post-body">
        <%= entity.preview.to_s.html_safe  %>
      </div>
    </div>
    <div style="clear:both"></div>
  </div>
</div>